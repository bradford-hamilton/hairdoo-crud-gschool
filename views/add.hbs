<div class='container'>
  <div class='row col-lg-4 col-lg-offset-4'>
    <br><br>
    <h2>What's your favorite doo?</h2>
    <br><br>
    <form method='POST' action='/hair/add'>
      <fieldset class="form-group">
        <label for="name">Username</label>
        <input type="text" name='name' class="form-control" id="name" placeholder="Enter Doo Name">
      </fieldset>
      <fieldset class="form-group">
        <label for="image">Image URL</label>
        <input type="text" name='image' class="form-control" id="image" placeholder="Enter Image URL">
      </fieldset>
      <fieldset class="form-group">
        <label for="description">Let us know what the doo looks like</label>
        <textarea class="form-control" name='description' id="description" rows="3"></textarea>
      </fieldset>
      <fieldset class="form-group">
        <label for="rating">On a scale of 1 to Mullet</label>
        <select class="form-control" name='rating' id="rating">
          <option>1</option>
          <option>2</option>
          <option>3</option>
          <option>4</option>
          <option>5</option>
          <option>6</option>
          <option>7</option>
          <option>8</option>
          <option>9</option>
          <option>10</option>
        </select>
      </fieldset>
      <button type="submit" class="btn btn-primary">Post</button>
    </form>
    <br><br>
  </div>
</div>
